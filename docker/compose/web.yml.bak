name: robot

services:
  video-dashboard:
    image: nginx:stable
    ports: ["${DASHBOARD_PORT:-8081}:80"]
    networks: [robot-net]
    volumes:
      - ${PROJECT_ROOT}/site:/usr/share/nginx/html:ro
      - ${PROJECT_ROOT}/site/nginx/conf.d:/etc/nginx/conf.d:ro
    restart: unless-stopped
    depends_on:
      web-video-server:
        condition: service_healthy   # <— wait until WVS serves /streams
    healthcheck:
      test: ["CMD-SHELL", "nginx -t || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3

networks:
  robot-net: {}
