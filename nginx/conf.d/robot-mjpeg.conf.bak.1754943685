server {
    listen 80;
    server_name _;

    location /status {
        proxy_pass http://netstatus:5000/status;
        proxy_set_header Host $host;
    }
    location /status_temp {
        proxy_pass http://netstatus:5000/status_temp;
        proxy_set_header Host $host;
    }
    location /status_uptime {
        proxy_pass http://netstatus:5000/status_uptime;
        proxy_set_header Host $host;
    }

    # serve the static dashboard
    root /usr/share/nginx/html;
    index index.html;

    # Docker DNS re-resolve (ONE resolver line only)
    resolver 127.0.0.11 ipv6=off valid=30s;

    # dynamic upstreams (so nginx doesn't resolve at startup)
    set $netstatus http://netstatus:7070;
    set $camera http://web-video-server:8080;

    # backend JSON
    location = /api/netstatus   { proxy_pass $netstatus/api/netstatus; }

    # aliases used by the page
    location = /status          { proxy_pass $netstatus/api/netstatus; }
    location = /status_temp     { proxy_pass $netstatus/api/netstatus; }
    location = /status_uptime   { proxy_pass $netstatus/api/netstatus; }

    # camera stream (temporarily points to nowhere; won't crash nginx)
    location /mjpeg {
        proxy_pass $camera/stream?topic=/camera/image_raw;
        proxy_http_version 1.1;
        proxy_buffering off;
        proxy_request_buffering off;
        proxy_read_timeout 1h;
    }
}
